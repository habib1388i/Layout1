<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="60sp"
        android:background="#26D89A" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:height="60sp"
        android:background="#ff1a1a" />

    <Button
        android:id="@+id/purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:width="140sp"
        android:height="210sp"
        android:background="#7300e6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:height="60sp"
        android:background="#073C10" />

    <Button
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/purple"
        android:layout_toRightOf="@+id/vertical_line"
        android:height="60sp"
        android:background="#073C10" />

    <Button
        android:id="@+id/vertical_line"
        android:layout_width="20sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:height="365sp"
        android:background="#B5B1B7" />

</RelativeLayout>
